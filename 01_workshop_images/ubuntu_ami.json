{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-1",
    "source_ami": "ami-e8de819f",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "heise docker ws {{timestamp}}",
    "vpc_id": "vpc-fa13df9f",
    "subnet_id": "subnet-6200f93b",
    "associate_public_ip_address": "true",
    "ami_virtualization_type": "hvm"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sleep 30",
      "sudo apt-get update",
      "sudo apt-get install -y curl",
      "sudo sh -c \"curl -sSL https://get.docker.com/ | sh\""
    ]
  }]
}
