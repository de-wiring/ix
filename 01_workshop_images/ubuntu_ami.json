{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "vpc_id": "",
    "subnet_id": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-1",
    "source_ami": "ami-e8de819f",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "heise docker ws ubuntu {{timestamp}}",
    "vpc_id": "{{user `vpc_id`}}",
    "subnet_id": "{{user `subnet_id`}}",
    "associate_public_ip_address": "true",
    "ami_virtualization_type": "hvm"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sleep 30",
      "sudo /usr/bin/apt-get update -y",
      "sudo DEBIAN_FRONTEND=noninteractive /usr/bin/apt-get install -y curl git net-tools deltarpm gem ruby libguestfs-tools debootstrap",
      "sudo /usr/sbin/useradd -m demo",
      "sudo adduser demo sudo"
    ]
  },
  {
    "type": "shell",
    "script": "bin/05_env.sh"
  },
  {
    "type": "shell",
    "script": "bin/10_docker.sh"
  },
  {
    "type": "shell",
    "script": "bin/20_serverspec.sh"
  },
  {
    "type": "shell",
    "script": "bin/60_demo.sh"
  }]
}
