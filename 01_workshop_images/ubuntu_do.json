{
  "variables": {
    "api_token": ""
  },
  "builders": [{
    "type": "digitalocean",
    "api_token": "{{user `api_token`}}",
    "image": "ubuntu-15-10-x64",
    "region": "fra1",
    "size": "512mb",
    "snapshot_name": "heise docker ws ubuntu {{timestamp}}"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sleep 30",
      "sudo /usr/bin/apt-get update -y",
      "sudo DEBIAN_FRONTEND=noninteractive /usr/bin/apt-get install -y curl git net-tools deltarpm gem ruby libguestfs-tools debootstrap vim",
      "sudo /usr/sbin/useradd -m demo",
      "sudo adduser demo sudo",
      "sudo sed -i '/^%sudo/ s/ALL$/NOPASSWD:ALL/' /etc/sudoers"
    ]
  },
  {
    "type": "shell",
    "script": "bin/05_env.sh"
  },
  {
    "type": "shell",
    "script": "bin/10_docker.sh"
  },
  {
    "type": "shell",
    "script": "bin/20_serverspec.sh"
  },
  {
    "type": "shell",
    "script": "bin/60_demo.sh"
  }]
}
